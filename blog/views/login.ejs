<!doctype html><html lang="en"><head>    <meta charset="UTF-8">    <title>登录</title>    <link rel="stylesheet" href="/stylesheets/login.css"/></head><body><form action="/checklogin" method="post">    用户名：<input type="text" name="username" id="username"><br/>    密  码：<input type="password" name="pass" id="pass"><br/>    <input type="submit" name="login" value="登录"></form><script src="/javascripts/jquery-1.12.4.min.js"></script><script>    $(function(){        var $flag = 1;       $('#username').on('blur',function(){           if(this.value == "" && $flag){              // $('.error').remove();               $flag = 0;               $(this).after('<span class="error">请输入用户名</span>');           }       });    });</script></body></html>